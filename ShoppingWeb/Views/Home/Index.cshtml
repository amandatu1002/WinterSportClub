@using Microsoft.AspNet.Identity
@using PagedList
@using PagedList.Mvc
@model IPagedList<ShoppingWeb.Models.Product>
@{
    ViewBag.Title = "Home";
    var UserId = User.Identity.GetUserId();
    var UserName = User.Identity.Name;
}



<body>


           




    <div id="wrapper">
        <!-- Sidebar -->
        @*@{Html.RenderAction("_CategoryMenu", "Category");}*@
       

        <div id="page-content-wrapper">
            <div class="container-fluid">



                <div class="">
                    <h1 style="font-size:50px">Welcome to Caulfield Snow Sports Club</h1>
                    <div class="row">
                        <div class="[ col-md-4 col-md-4 col-md-4 ]">
                            <div class="[ info-card ]">
                                <img style="width: 100%" src="https://c1.staticflickr.com/9/8088/8477036810_07731d5b7e_b.jpg" />
                                <div class="[ info-card-details ] animate">
                                    <div class="[ info-card-header ]">
                                        <h1> Need advice on where to get the best equipment? </h1>
                                    </div>
                                    <div class="[ info-card-detail ]">
                                        <!-- Description -->
                                        <p> Looking for someone to organise a trip with or simply keen for a lift up the mountain fater a dump for a day trip? </p>
                                        <div class=" social">
                                            <a href="https://www.facebook.com/amandatu1002" class="[ social-icon facebook ] animate"><span class="fa fa-facebook"></span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="[ col-md-4 col-md-4 col-md-4 ]">
                            <div class="[ info-card ]">
                                <img style="width: 100%" src="https://c1.staticflickr.com/3/2663/3807769201_1e70046d0b.jpg" />
                                <div class="[ info-card-details ] animate">
                                    <div class="[ info-card-header ]">
                                        <h1> Keep an eye on our social media pages </h1>
                                    </div>
                                    <div class="[ info-card-detail ]">
                                        <!-- Description -->
                                        <p> Message us to find out for event updates and trip sales </p>
                                        <div class=" social">
                                            <a href="https://www.instagram.com/amandatu1002/" class="[ social-icon instagram ] animate"><span class="fa fa-instagram"></span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="[ col-md-4 col-md-4 col-md-4 ]">
                            <div class="[ info-card ]">
                                <img style="width: 120%" src="https://c2.staticflickr.com/2/1782/43356443481_ee65c07536.jpg" />
                                <div class="[ info-card-details ] animate">
                                    <div class="[ info-card-header ]">
                                        <h1> The Snow Season Has Launched! </h1>
                                    </div>
                                    <div class="[ info-card-detail ]">
                                        <!-- Description -->
                                        <p>You're guaranteed to make lifelong friends on both our winter trips and awesome social events all year round.</p>
                                        <div class=" social">
                                            <a href="https://github.com/dt80675112" class="[ social-icon github ] animate"><span class="fa fa-github-alt"></span></a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>



                    <div id="banner">
                        <br />
                        <div class="jumbotron">
                            <h2> Find your trips! </h2>
                            <div>

                                @using (Html.BeginForm("Index", "Home"))
                                {

                                    <form class="navbar-form navbar-left">
                                        <div class="form-group">
                                            @Html.TextBox("q", null, new { @class = "form-control", placeholder = "Search" })
                                        </div>
                                        <input type="submit" value="Search" class="btn btn-default" />
                                    </form>
                                }


                            </div>

                            @if (ViewBag.ResultMessage != null)
                            {
                                <h2>
                                    About "@Model.Count" results of "@ViewBag.ResultMessage".
                                </h2>

                            }

                        </div>
                    </div>

                    @foreach (var Product in Model)
                    {
                        <!--<div class="col-xs-12 col-sm-6 col-md-3 wrapper">-->
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 rwrapper">
                            <div class="rlisting">
                                <div class="col-lg-12 nopad">
                                    <a href="@Url.Action("Detail", new { id = Product.Id })"><img class="ProductImg" src="@Product.DefaultImageURL" alt="Product Photo" width="250" height="250" /></a>
                                </div>
                                <div class="col-lg-12 nopad">

                                    <h3>&nbsp;&nbsp;@Html.DisplayFor(model => Product.Name)</h3>
                                    <p>Description：@Html.DisplayFor(model => Product.Description)</p>
                                    <p>Price：@Html.DisplayFor(model => Product.Price)</p>
                                    <p>Available：@Html.DisplayFor(model => Product.Quantity)</p>
                                    <p>

                                        <a onclick="AddToCart('@Product.Id')" href="javascript: void(0)" class="btn btn-success" role="button">Add to cart</a>
                                        <a href="@Url.Action("Detail", new { id = Product.Id })" class="btn btn-default" role="button">Description</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                    }

                </div>
                @Html.PagedListPager((IPagedList)this.Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
            </div>
        </div>
    </div>

