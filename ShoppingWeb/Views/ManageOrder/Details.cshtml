@model IEnumerable<ShoppingWeb.Models.OrderDetail>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@String.Format("Order number:{0} Product list", this.Model.First().Id)</h2>
<hr />
@Html.ActionLink("Return to Product Management", "Index", new { }, new { @class = "btn btn-default" })
<table class="table">
    <tr>
        <th>Product name</th>
        <th>Product price</th>
        <th>Qty</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
        </tr>
    }

</table>
@Html.ActionLink("return to Product Management", "Index", new { }, new { @class = "btn btn-default" })

