@using PagedList
@using PagedList.Mvc
@*指定model的資料型態為ProductCategoryViewModel的IPagedList*@
@model IPagedList<ShoppingWeb.Models.Order>

<table class="table">
    <thead>
        <tr>
            <th>
                User email
            </th>
            <th>
                Recipient name
            </th>
            <th>
                Recipient phone
            </th>
            <th>
                Recipient address
            </th>

        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <td> @Html.DisplayFor(modelItem => item.UserId)</td>
            <td>@Html.DisplayFor(modelItem => item.RecieverName)</td>
            <td>@Html.DisplayFor(modelItem => item.RecieverPhone)</td>
            <td>@Html.DisplayFor(modelItem => item.RecieverAddress)</td>
            <td>
                @Html.ActionLink("My Order Details", "MyOrderDetails", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }


</table>
@Html.PagedListPager((IPagedList)this.Model, page => Url.Action("MyOrder", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)